@model PatientViewModel
@{
    string noReccomendation = "No reccomendations yet.";
}
<div class="container">
    <h2 class="text-center">Patient Message Form</h2>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="@Model._PatientModel.CustomerId" hidden />
        <div class="form-group">
            <label>Patient Message:</label>
            <textarea asp-for="@Model._PatientModel.Description" class="form-control" rows="5"></textarea>
            <span asp-validation-for="@Model._PatientModel.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ReportFile">Upload a Report:</label>
            <input asp-for="@Model._PatientModel.ReportFile" type="file" class="form-control border border-black" name="file">
        </div>
        <div class="form-group mt-3">
            <select asp-for="@Model._PatientModel.DoctorId" asp-items="@Model.DepartmentList" class="form-select border border-black">
                <option disabled selected>--Select Department--</option>
            </select>
        </div>
        <div class="form-group">
            <label for="response">Response from Doctor:</label>
            <textarea class="form-control" rows="5" disabled>
                @if (ViewBag.DescriptionDetection==null)
                {
               
                 

                    @noReccomendation
                    
                       
                }
                else
                {
                  
                       @ViewBag.DescriptionDetection
                  
                }
            </textarea>
        </div>
        <div class="container text-center">
            <button type="submit" class="btn btn-primary col-4">Update Message</button>
            <button class="btn btn-danger col-4" asp-route-delete="@true">Delete the Message</button>
        </div>
    </form>
</div>
