@model FindDoctor.Models.PatientModel

<div class="container">
    <h2 class="text-center">Patient Message Form</h2>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="CustomerId" hidden />
        <div class="form-group">
            <label>Patient Message:</label>
            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ReportFile">Upload a Report:</label>
            <input asp-for="ReportFile" type="file" class="form-control border border-black" name="file">
        </div>
        <div class="form-group">
            <label for="response">Response from Doctor:</label>
            <textarea class="form-control" rows="5" disabled>
                @if (Model.DescriptionDetections != null && Model.DescriptionDetections.Any())
                {
               
                        @foreach (var detection in Model.DescriptionDetections)
                        {
                    @detection.DiseaseDetection
                        }
                       
                }
                else
                {
                <p>No recommendations yet.</p>
                }
            </textarea>
        </div>
        <div class="container text-center">
            <button type="submit" class="btn btn-primary col-4">Update Message</button>
            <button class="btn btn-danger col-4" asp-route-delete="@true">Delete the Message</button>
        </div>
    </form>
</div>
