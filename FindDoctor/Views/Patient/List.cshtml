@model List<PatientModel>



<div class="container">
    <h2 class="text-center">List Page</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model)
            {
                
                    <tr>
                    <td>
                        <img src="@patient.ReportFile" alt="Report Image" style="max-width: 100px; max-height: 100px;" />
                    </td>
                        <td>@patient.Name @patient.Surname</td>
                        <td colspan="2">@patient.Description</td>
                        <td><a class="btn btn-primary" asp-action="update" asp-route-id="@patient.CustomerId" >View</a></td>
                    </tr>
                
            }
            
        </tbody>
    </table>
</div>