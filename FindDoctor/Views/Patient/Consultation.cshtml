@model PatientModel
<div class="container">
    <h2 class="text-center">Patient Message Form</h2>
    <form method="post">
        <div class="form-group">
            <label >Patient Message:</label>
            <input asp-for="Description" class="form-control" rows="5"></input>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="report">Upload a Report:</label>
            <input type="file" id="report" class="form-control">
        </div>
        <div class="form-group">
            <label for="response">Response from Doctor:</label>
            <input asp-for="DiseaseDetection" class="form-control" rows="5" disabled></input>
            <span asp-validation-for="DiseaseDetection" class="text-danger"></span>
        </div>
        <button class="btn btn-primary" >Add Message</button>
    </form>
</div>