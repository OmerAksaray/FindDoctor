@model FindDoctor.Models.PatientModel

<div class="container">
    <h2 class="text-center">Patient Message Form For Doctors</h2>
    <form method="post">
        <input asp-for="CustomerId" hidden />
        <div class="form-group">
            <label>Patient Message:</label>
            <textarea asp-for="Description" class="form-control" rows="5" disabled>@Model.Description</textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Doctor Responses:</label>
            @if (Model.DescriptionDetections != null && Model.DescriptionDetections.Any())
            {
                @foreach (var detection in Model.DescriptionDetections)
                {
                    <div class="form-group">
                        <textarea class="form-control" rows="5" disabled>@detection.DiseaseDetection</textarea>
                    </div>
                }
            }
            else
            {
                <p>No responses yet.</p>
            }
        </div>
        <div class="form-group">
            <label for="response">Add or Update Response:</label>
            <textarea name="diseaseDetection" rows="5" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Submit Response</button>
    </form>
</div>
